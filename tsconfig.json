{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,                  // Desativa o modo estrito completo
    "noImplicitAny": false,            // Permite `any` implícito
    "noImplicitReturns": false,        // Permite funções sem retorno explícito
    "noUnusedLocals": false,           // Ignora variáveis locais não usadas
    "noUnusedParameters": false,       // Ignora parâmetros não usados em funções
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
